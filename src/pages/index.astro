---
import Fondo from "../components/Landing/Fondo.astro";
import Navegacion from "../components/Landing/NavBar.astro";
import SectionAbout from "@/components/Sections/SectionAbout.astro";
import SectionContacto from "@/components/Sections/SectionContacto.astro";
import SectionHero from "@/components/Sections/SectionHero.astro";
import SectionProyectos from "@/components/Sections/SectionProyectos.astro";
import SectionTecnologias from "@/components/Sections/SectionTecnologias.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Portafolio" descripcion="Este el portafolio de mi trabajo">
