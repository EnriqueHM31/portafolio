---
import { ClientRouter } from 'astro:transitions'
interface Props {
	title: string
	descripcion: string
}
const { title, descripcion } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href="./icono.svg" type="image/x-icon" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/src/assets/fondo.css" />
		<meta name="description" content={descripcion} />
		<script src="/src/lib/Fondo.js" defer is:raw></script>
		<ClientRouter />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--blanco: #fff;
		--negro: #000;
		--cyan: #04ffe2;
	}
	*,
	*::before,
	*::after {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		list-style: none;
		text-decoration: none;
	}
	html {
		font-size: 10px;
		background-color: var(--negro);
		scroll-behavior: smooth;
	}

	body {
		overflow-x: hidden;
		min-height: 100dvh;
	}

	@font-face {
		font-family: 'monse';
		src: url('../assets/monserrat.woff2') format('woff2');
	}

	@font-face {
		font-family: 'out';
		src: url('../assets/out.woff2') format('woff2');
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: 'monse', sans-serif;
	}

	a,
	p,
	strong,
	input,
	button,
	textarea,
	select,
	::after,
	::before,
	span,
	strong,
	div {
		font-family: 'out', sans-serif;
	}

	.seccion {
		padding: 5rem 0;
		min-height: 100dvh;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		width: 95%;
		margin: 0 auto;
	}

	.typing h2 {
		font-size: clamp(2rem, 5vw, 7rem);
		color: var(--blanco);
		text-shadow: 0 0 1rem var(--cyan);
		overflow: hidden;
		border-right: 0.3rem solid white;
		white-space: nowrap;
		letter-spacing: 0.2rem;
		animation:
			typing 4s steps(20, end) infinite alternate,
			cursor 0.75s step-end infinite;
	}

	.iconos-tecnologias {
		max-width: 2rem;
		height: auto;
		aspect-ratio: 1 /1;
		position: relative;
		z-index: 1;
	}

	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: calc(100% + 5rem);
		}
	}

	@keyframes cursor {
		from,
		to {
			border-color: transparent;
		}
		50% {
			border-color: white;
		}
	}
</style>
