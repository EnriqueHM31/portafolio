<div class="fixed inset-0 -z-50 min-h-screen overflow-hidden bg-linear-to-b from-black from-60% to-green-500/45">
    <div id="cursor-glow"></div>
</div>

<style>
    /* Cursor glow (siempre sigue) */
    #cursor-glow {
        position: fixed;
        inset: 0;
        width: 620px;
        height: 620px;
        border-radius: 9999px;
        pointer-events: none;
        background: radial-gradient(circle, rgba(3, 253, 24, 0.253), rgba(34, 197, 94, 0.15), transparent 70%);
        filter: blur(70px);
        transform: translate(-50%, -50%);
        z-index: 50;
    }

    /* Reveal effect SOLO cuando est√° encima */
    .reveal-zone:hover ~ #cursor-glow {
        mix-blend-mode: screen;
    }
</style>

<script>
    import gsap from "gsap";

    const cursor = document.getElementById("cursor-glow");

    window.addEventListener("mousemove", (e) => {
        gsap.to(cursor, {
            x: e.clientX,
            y: e.clientY,
            duration: 0.2,
            ease: "power3.out",
        });
    });
</script>
