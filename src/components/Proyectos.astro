---
import CardProyecto from './CardProyecto.astro'

import { getCollection } from 'astro:content'

const proyectos = await getCollection('proyectos')
---

<section class="seccion">
	<header>
		<div class="typing">
			<h2>Proyectos</h2>
		</div>
	</header>

	<main class="contenido-proyectos" id="proyectos">
		{
			proyectos.map((proyecto) => {
				return <CardProyecto data={proyecto.data} slug={proyecto.slug} />
			})
		}
	</main>
</section>

<style>
	.contenido-proyectos {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(25rem, 1fr));
		width: 95%;
		gap: 3rem;
		padding: 5rem;
	}
</style>
