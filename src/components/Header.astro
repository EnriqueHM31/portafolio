---
import IconoGitHub from '../components/Iconos/IconoGitHub.astro'
import IconoEmail from '../components/Iconos/iconoEmail.astro'
import { INFORMACION_HEADER } from '../lib/constantes'

const { title, descripcion } = INFORMACION_HEADER
---

<section class="seccion-header" id="inicio">
	<div class="contenido-header">
		<h1 class="titulo">{title}</h1>
		<p class="descripcion-header">{descripcion}</p>
		<div class="contenedor-iconos-contacto">
			<IconoGitHub enlace="https://github.com/EnriqueHM31" titulo="EnriqueHM31" descripcion="Visitar mi Git Hub" />
			<IconoEmail enlace="mailto:luisenriquehernandezmarin0@gmail.com?subject=Trabajo" />
		</div>
	</div>

	<figure class="image-header">
		<img src="/header.webp" width="100%" height="100%" alt="Imagen de un astrounata, algo que me gusta" loading="lazy" />
	</figure>
</section>

<style>
	.seccion-header {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 90%;
		min-height: 100dvh;
		padding: 2rem;
		margin: 0 auto;
	}

	.contenido-header {
		width: min(55%, 100%);
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.titulo {
		font-size: clamp(2rem, 6vw, 6.5rem);
		color: var(--blanco);
		text-shadow: 0 0 1rem var(--cyan);
	}

	.descripcion-header {
		font-size: clamp(1.5rem, 5vw, 2.5rem);
		color: var(--blanco);
		margin-top: 1rem;
		line-height: 1.5;
	}

	.contenedor-iconos-contacto {
		display: flex;
		align-items: center;
		width: 100%;
		gap: 2rem;
		margin-top: 3rem;
	}

	.image-header {
		width: min(40%, 100%);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.image-header img {
		width: 80%;
		aspect-ratio: 1 / 1;
		object-fit: cover;
		filter: drop-shadow(0 0 1rem var(--cyan));
		animation: astro 1s linear infinite alternate;
		rotate: 20deg;
	}

	@keyframes astro {
		0% {
			transform: translateY(0);
		}
		100% {
			transform: translateY(-5rem);
		}
	}
</style>
