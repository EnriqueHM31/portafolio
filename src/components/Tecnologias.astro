---
interface Props {
	tecnologia: string
}
const { tecnologia } = Astro.props as Props
---

<li class="btn" data-tecnologia={tecnologia}>
	<strong>
		<slot />
		{tecnologia}
	</strong>
	<div id="container-stars">
		<div id="stars"></div>
	</div>

	<div id="glow">
		<div class="circle"></div>
		<div class="circle"></div>
	</div>
</li>

<style>
	.btn[data-tecnologia='HTML'] {
		background-image: linear-gradient(#161a25, #161a25), linear-gradient(137.48deg, #e34f26 10%, #e34f26 45%, #000000 67%, #161a25 87%);
	}
	.btn[data-tecnologia='CSS'] {
		background-image: linear-gradient(#161a25, #161a25), linear-gradient(137.48deg, #264de4 10%, #264de4 45%, #000000 67%, #161a25 87%);
	}
	.btn[data-tecnologia='REACT'] {
		background-image: linear-gradient(#161a25, #161a25), linear-gradient(137.48deg, #58c4dc 10%, #58c4dc 45%, #000000 67%, #161a25 87%);
	}
	.btn[data-tecnologia='ASTRO'] {
		background-image: linear-gradient(#161a25, #161a25), linear-gradient(137.48deg, #ff5d01 10%, #ff5d01 45%, #000000 67%, #161a25 87%);
	}
	.btn[data-tecnologia='JS'] {
		background-image: linear-gradient(#161a25, #161a25), linear-gradient(137.48deg, #f0db4f 10%, #f0db4f 45%, #000000 67%, #161a25 87%);
	}

	.btn {
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 1rem 2rem;
		overflow: hidden;
		width: 100%;
		background-size: 300% 300%;
		backdrop-filter: blur(1rem);
		border-radius: 2rem;
		transition: transform 0.5s;
		animation: gradient_301 5s ease infinite;
		border: double 0.4rem transparent;
		background-origin: border-box;
		background-clip: content-box, border-box;
	}

	#container-stars {
		position: absolute;
		z-index: -1;
		width: 100%;
		height: 100%;
		overflow: hidden;
		transition: transform 0.5s;
		backdrop-filter: blur(1rem);
		border-radius: 5rem;
	}

	strong {
		z-index: 2;
		font-size: clamp(1.2rem, 5vw, 1.5rem);
		letter-spacing: 0.1rem;
		color: #ffffff;
		text-shadow: 0 0 0.4rem white;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1rem;
	}

	#glow {
		position: absolute;
		display: flex;
		width: clamp(12rem, 5vw, 15rem);
	}

	.circle-container {
		position: relative;
		width: 100%;
		height: 100%;
		animation: orbit 5s linear infinite;
	}

	.circle {
		position: absolute;
		width: clamp(2rem, 5vw, 3rem);
		height: clamp(2rem, 5vw, 3rem);
		border-radius: 50%;
		filter: blur(2rem);
	}

	.btn[data-tecnologia='HTML'] .circle:nth-of-type(1) {
		background: #e34f26;
	}
	.btn[data-tecnologia='CSS'] .circle:nth-of-type(1) {
		background: #264de4;
	}
	.btn[data-tecnologia='REACT'] .circle:nth-of-type(1) {
		background: #58c4dc;
	}
	.btn[data-tecnologia='ASTRO'] .circle:nth-of-type(1) {
		background: #ff5d01;
	}
	.btn[data-tecnologia='JS'] .circle:nth-of-type(1) {
		background: #f0db4f;
	}

	.circle:nth-of-type(1) {
		animation: orbit 8s linear infinite;
	}

	.btn[data-tecnologia='HTML'] .circle:nth-of-type(2) {
		background: #e34f26;
	}
	.btn[data-tecnologia='CSS'] .circle:nth-of-type(2) {
		background: #264de4;
	}
	.btn[data-tecnologia='REACT'] .circle:nth-of-type(2) {
		background: #58c4dc;
	}
	.btn[data-tecnologia='ASTRO'] .circle:nth-of-type(2) {
		background: #ff5d01;
	}
	.btn[data-tecnologia='JS'] .circle:nth-of-type(2) {
		background: #f0db4f;
	}

	.circle:nth-of-type(2) {
		animation: orbit 10s linear infinite;
	}

	.btn:hover #container-stars {
		z-index: 1;
		background-color: #161a25;
	}

	.btn:hover {
		transform: scale(1.1);
	}

	.btn:active[data-tecnologia='HTML'] {
		background-image: linear-gradient(#161a25, #161a25), linear-gradient(137.48deg, #e34f26 10%, #e34f26 45%, #000000 67%, #161a25 87%);
	}
	.btn:active[data-tecnologia='CSS'] {
		background-image: linear-gradient(#161a25, #161a25), linear-gradient(137.48deg, #264de4 10%, #264de4 45%, #000000 67%, #161a25 87%);
	}
	.btn:active[data-tecnologia='REACT'] {
		background-image: linear-gradient(#161a25, #161a25), linear-gradient(137.48deg, #58c4dc 10%, #58c4dc 45%, #000000 67%, #161a25 87%);
	}

	@keyframes orbit {
		from {
			transform: rotate(0deg) translateX(100px) rotate(0deg);
		}
		to {
			transform: rotate(360deg) translateX(100px) rotate(-360deg);
		}
	}

	#stars {
		position: relative;
		background: transparent;
		width: 200rem;
		height: 200rem;
	}

	#stars::after {
		content: '';
		position: absolute;
		top: -10rem;
		left: -100rem;
		width: 100%;
		height: 100%;
		animation: animStarRotate 90s linear infinite;
	}

	#stars::after {
		background-image: radial-gradient(#ffffff 1px, transparent 1%);
		background-size: 6rem 6rem;
	}

	#stars::before {
		content: '';
		position: absolute;
		top: 0;
		left: -50%;
		width: 170%;
		height: 500%;
		animation: animStar 60s linear infinite;
	}

	#stars::before {
		background-image: radial-gradient(#ffffff 1px, transparent 1%);
		background-size: 50px 50px;
		opacity: 0.5;
	}

	@keyframes animStar {
		from {
			transform: translateY(0);
		}

		to {
			transform: translateY(-135rem);
		}
	}

	@keyframes animStarRotate {
		from {
			transform: rotate(360deg);
		}

		to {
			transform: rotate(0);
		}
	}

	@keyframes gradient_301 {
		0% {
			background-position: 0% 50%;
		}

		50% {
			background-position: 100% 50%;
		}

		100% {
			background-position: 0% 50%;
		}
	}

	@keyframes pulse_3011 {
		0% {
			transform: scale(0.75);
			box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.7);
		}

		70% {
			transform: scale(1);
			box-shadow: 0 0 0 10px rgba(0, 0, 0, 0);
		}

		100% {
			transform: scale(0.75);
			box-shadow: 0 0 0 0 rgba(0, 0, 0, 0);
		}
	}
</style>
