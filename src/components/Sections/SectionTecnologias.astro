---
import TitleSection from "@/components/Atomos/TitleSection.astro";
import React from "@/components/Iconos/React.astro";
import IcAstro from "@/components/Iconos/IcAstro.astro";
import Typescript from "@/components/Iconos/Typescript.astro";
import Javascript from "@/components/Iconos/Javascript.astro";
import GitHub from "@/components/Iconos/GitHub.astro";
import Tailwind from "@/components/Iconos/Tailwind.astro";
import Node from "@/components/Iconos/Node.astro";
import Mysql from "@/components/Iconos/Mysql.astro";
import Express from "@/components/Iconos/Express.astro";
import Html from "@/components/Iconos/Html.astro";
import Css from "@/components/Iconos/Css.astro";
---

<!-- From Uiverse.io by ilkhoeri -->
<div class="relative h-full w-full" id="tecnologias">
    <section class="wrapper relative mb-20 min-h-[120dvh]">
        <div class="inner" style="--quantity: 11;">
            <div class="center-text">
                <TitleSection title="Mis herramientas de trabajo" />
            </div>

            <picture class="card" style="--index: 0;--color-card: 0, 107, 201;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">Typescript</p>
                    <Typescript />
                </div>
            </picture>
            <picture class="card" style="--index: 1;--color-card: 240, 157, 34;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">Mysql</p>
                    <Mysql />
                </div>
            </picture>
            <picture class="card" style="--index: 2;--color-card: 142, 252, 157;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">Node Js</p>
                    <Node />
                </div>
            </picture>
            <picture class="card" style="--index: 3;--color-card: 142, 202, 252;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">React</p>
                    <React />
                </div>
            </picture>
            <picture class="card" style="--index: 4;--color-card: 252, 252, 142;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">Javascript</p>
                    <Javascript />
                </div>
            </picture>
            <picture class="card" style="--index: 5;--color-card: 115, 35, 235;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">Astro</p>
                    <IcAstro />
                </div>
            </picture>
            <picture class="card" style="--index: 6;--color-card: 74, 171, 255;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">Tailwind</p>
                    <Tailwind />
                </div>
            </picture>
            <picture class="card" style="--index: 7;--color-card: 255, 90, 0;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">HTML</p>
                    <Html />
                </div>
            </picture>
            <picture class="card" style="--index: 8;--color-card: 0, 59, 148;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">CSS</p>
                    <Css />
                </div>
            </picture>
            <picture class="card" style="--index: 9;--color-card: 50, 50, 50;">
                <div class="img">
                    <p class="text-2xl font-bold text-white">GitHub</p>
                    <GitHub />
                </div>
            </picture>
            <picture class="card" style="--index: 10;--color-card: 138, 138, 134;">
                <div class="img flex flex-col items-center justify-center gap-4 p-4">
                    <p class="text-2xl font-bold text-white">Express JS</p>
                    <Express />
                </div>
            </picture>
        </div>
    </section>
</div>

<style>
    .center-text {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;

        font-size: clamp(2rem, 10vw, 10rem) !important;
        font-weight: bold;
        letter-spacing: 0.07em;
        text-transform: uppercase;

        color: white;
        text-shadow:
            0 0 15px rgba(255, 255, 255, 0.35),
            0 0 40px rgba(142, 249, 252, 0.35);

        transform: translateZ(calc(var(--translateZ) -400px)) rotateX(var(--rotateX));

        pointer-events: none;
        user-select: none;
    }

    .wrapper {
        width: 100%;
        height: 100%;
        position: relative;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .inner {
        --w: 200px;
        --h: 230px;
        --translateZ: calc((var(--w) + var(--h)) + 10px);
        --rotateX: -15deg;
        --perspective: 1000px;
        position: absolute;
        width: var(--w);
        height: var(--h);
        top: 25%;
        left: calc(50% - (var(--w) / 2) - 2.5px);
        z-index: 2;
        transform-style: preserve-3d;
        transform: perspective(var(--perspective));
        animation: rotating 20s linear infinite;
    }
    @keyframes rotating {
        from {
            transform: perspective(var(--perspective)) rotateX(var(--rotateX)) rotateY(0);
        }
        to {
            transform: perspective(var(--perspective)) rotateX(var(--rotateX)) rotateY(1.2turn);
        }
    }

    .card {
        position: absolute;
        border: 2px solid rgba(var(--color-card));
        border-radius: 12px;
        overflow: hidden;
        inset: 0;
        transform: rotateY(calc((360deg / var(--quantity)) * var(--index))) translateZ(var(--translateZ));
    }

    .img {
        display: flex;
        align-items: center;
        justify-content: start;
        gap: 15px;
        padding: 30px;
        flex-direction: column;
        width: 100%;
        height: 100%;
        object-fit: cover;
        background: #0000
            radial-gradient(
                circle,
                rgba(var(--color-card), 0.2) 0%,
                rgba(var(--color-card), 0.6) 80%,
                rgba(var(--color-card), 0.9) 100%
            );
    }
    .img svg {
        flex: 1;
        width: 100%;
        height: 100%;
    }
</style>
